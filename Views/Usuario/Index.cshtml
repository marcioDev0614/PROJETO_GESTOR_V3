@model List<UsuarioModel>

@{
    ViewData["Title"] = "Listagem de Usuários";
}



@if (TempData["MensagemSucessoUsuario"] != null)
{
    <div id="mensagem1" class="alert alert-success text-center" role="alert">
        @TempData["MensagemSucessoUsuario"]
        <button type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>

}

@if (TempData["MensagemErroUsuario"] != null)
{
    <div id="mensagem2" class="alert alert-danger text-center" role="alert">
        @TempData["MensagemErroUsuario"]
        <button id="botao2" type="button" class="close" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<div class="text-center" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); max-width: contain">
    <h1 class="display-4">@ViewData["Title"]</h1>
    <p style="font-size: 35px"><ion-icon name="person-outline"></ion-icon></p>
</div>

<div>
    <a asp-action="Criar" asp-controller="Usuario" role="button" class="btn btn-primary">Adicionar novo usuário</a>
</div>
<br />
<br />

<table class="table table-hover" id="table-usuarios">
    <thead>
        <tr>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)">Nome</th>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)">Login</th>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)">Email</th>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)">Perfil</th>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5)">Data de Cadastro</th>
            <th scope="col" style="text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); padding-left: 60px; ">Ações</th>
        </tr>
    </thead>
    <tbody>
        @if(Model != null && Model.Any())
        {
            @foreach(UsuarioModel usuario in Model)
            {
                <tr>
                    <td>@usuario.Nome</td>
                    <td>@usuario.Login</td>
                    <td>@usuario.Email</td>
                    <td>@usuario.Perfil</td>
                    <td>@usuario.DataCadastro</td>
                    <td>
                        <a role="button" class="btn btn-warning" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="Editar">Editar</a>
                        <a role="button" class="btn btn-danger" asp-route-id="@usuario.Id" asp-controller="Usuario" asp-action="ApagarConfirmacao">Apagar</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<script nomodule src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.js"></script>
<script type="module" src="https://unpkg.com/ionicons@7.1.0/dist/ionicons/ionicons.esm.js"></script>